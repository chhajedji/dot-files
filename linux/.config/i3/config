bindsym $mod+Print exec gnome-screenshot -a

#############################
### settings for i3-gaps: ###
#############################

hide_edge_borders both
# You can also use any non-zero value if you'd like to have a border. This also
# turns off the name of the window
for_window [class=".*"] border pixel 5
# Set inner/outer gaps
gaps inner 15
gaps outer 15

# Activate smart borders (always). No borders for single window but borders for
# multiple windows
smart_borders on

# Change outer gaps size
bindsym $mod+z		gaps outer current plus 5
bindsym $mod+Shift+z	gaps outer current minus 5

bindsym $mod+x			gaps inner current plus 5
bindsym $mod+Shift+x		gaps inner current minus 5

# Set to default 
bindsym $mod+Shift+t		gaps inner current set 15; gaps outer current set 15

# No gaps (almost fullscreen)
bindsym $mod+f		gaps inner current set 0; gaps outer current set 1
